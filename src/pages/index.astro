---
import Layout from "../layouts/Layout.astro";
import MainButton from "../components/MainButton.astro";
import BorderlessCard from "../components/BorderlessCard.astro";

import brandLogo from "../assets/brandLogo.png";
import heroImage1 from "../assets/heroImage1.png";
import heroImage2 from "../assets/heroImage2.png";
import heroImage3 from "../assets/heroImage3.png";
import reason1 from "../assets/reason1.png";
import reason2 from "../assets/reason2.png";
import reason3 from "../assets/reason3.png";
import reason4 from "../assets/reason4.png";
import showcaseSmall from "../assets/showcaseSmall.png";
import showcaseLarge from "../assets/showcaseLarge.png";
---

<Layout title="Green Thumbs Gardening - Home">
  <main>
    <section id="heroSection" class="flex bg-gPrimary text-gBright">
      <div class="w-[50%] flex flex-col items-center gap-5 py-64">
        <span class="flex text-5xl w-[60%] font-[600] items-center">
          <img
            class="object-contain h-full"
            src={brandLogo.src}
            alt="brand logo"
          />
          <h1>GREEN THUMBS GARDENING</h1>
        </span>
        <div class="w-[60%]">
          <div class="uppercase text-2xl px-3">
            Your oasis of tranquility awaits!
          </div>
          <div class="text-xl w-[75%] px-3 font-normal">
            Let's start the journey to your dream garden together.
          </div>
        </div>
        <div>
          <MainButton>DIG IN!</MainButton>
        </div>
      </div>
      <div class="w-[50%] flex flex-col gap-2 justify-center py-10 px-32">
        <div class="">
          <img
            class="h-full w-[400px] object-contain"
            src={heroImage1.src}
            alt="hero showcase 1"
          />
        </div>
        <div class="flex justify-end">
          <img
            class="h-full w-[400px] object-contain"
            src={heroImage2.src}
            alt="hero showcase 2"
          />
        </div>
        <div class="pl-10">
          <img
            class="h-full w-[400px] object-contain"
            src={heroImage3.src}
            alt="hero showcase 3"
          />
        </div>
      </div>
    </section>
    <section class="py-16 flex flex-col items-center gap-10 text-gShade">
      <div class="flex flex-col gap-4">
        <h2
          class="text-center uppercase text-gPrimary font-bold text-3xl max-w-[1440px]"
        >
          WHO WE ARE
        </h2>
        <p class="max-w-[1440px] px-48 text-lg">
          At GreenThumb Gardens, we believe that a beautiful garden is the heart
          of a thriving home. Our passion for gardening and commitment to
          excellence have made us the go-to choice for all your gardening needs.
          Whether you have a tiny terrace, a sprawling estate, or anything in
          between, we have the green thumbs and expertise to transform your
          outdoor space into a verdant paradise.
        </p>
      </div>
      <div class="flex flex-col gap-4">
        <h3
          class="text-center uppercase text-gPrimary font-bold text-2xl max-w-[1440px]"
        >
          WHY COOSE GREEN THUMBS WE ARE
        </h3>
        <div class="flex gap-20">
          <BorderlessCard imageSrc={reason1.src} caption="EXPERTISE" />
          <BorderlessCard
            imageSrc={reason2.src}
            caption="PERSONALIZED SERVICE"
          />
          <BorderlessCard
            imageSrc={reason3.src}
            caption="SUSTAINABLE PRACTICES"
          />
          <BorderlessCard
            imageSrc={reason4.src}
            caption="COMPREHENSIVE SERVICE"
          />
        </div>
      </div>
    </section>
    <section class="py-16 flex justify-center">
      <div class="w-[1440px] h-[700px] flex">
        <div class="flex-[0.3] relative">
          <img
            class="w-full h-full object-contain absolute left-[30%]"
            src={showcaseSmall.src}
            alt="showcase small image"
          />
        </div>
        <div class="flex-[0.7] bg-red-800">
          <img
            class="h-full object-cover"
            src={showcaseLarge.src}
            alt="showcase large image"
          />
        </div>
      </div>
    </section>
  </main>
</Layout>

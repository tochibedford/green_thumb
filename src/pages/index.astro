---
import Layout from '../layouts/Layout.astro';
import brandLogo from "../assets/brandLogo.png"
import MainButton from '../components/MainButton.astro';
---

<Layout title="Green Thumbs Gardening - Home">
	<main class="bg-gPrimary border-t">
		<section id="heroSection" class="flex text-gBright">
			<div class="flex-1 flex flex-col items-center gap-5 py-64">
				<span class="flex text-5xl w-[60%] font-[600] items-center">
					<img class="object-contain h-full" src={brandLogo.src} alt="brand logo">
					<div>GREEN THUMBS GARDENING</div>
				</span>
				<div class="w-[60%]">
					<div class="uppercase text-2xl px-3">Your oasis of tranquility awaits!</div>
					<div class="text-xl w-[75%] px-3 opacity-90 font-normal">Let's start the journey to your dream garden together.</div>
				</div>
				<div>
					<MainButton>DIG IN!</MainButton>
				</div>
			</div>
			<div class="flex-1 bg-red-500">

			</div>
		</section>
		
		
	</main>
</Layout>